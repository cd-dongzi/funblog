{
  "name": "server",
  "version": "1.0.3",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:pm2": "pm2 start pnpm --name server -- start",
    "stop:pm2": "pm2 stop server",
    "delete:pm2": "pm2 delete server",
    "dev": "NODE_ENV=development nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "prisma:merge": "prisma-import --force --schemas './src/modules/**/*.prisma' --output './prisma/schema.prisma'",
    "prisma:generate": "prisma generate --schema ./prisma/schema.prisma",
    "prisma:pull": "prisma db pull --schema ./prisma/schema.prisma",
    "prisma:push": "prisma db push --schema ./prisma/schema.prisma",
    "prisma:migrate": "prisma migrate dev --schema ./prisma/schema.prisma",
    "prisma:deploy": "prisma migrate deploy --schema ./prisma/schema.prisma",
    "prisma:init": "pnpm run prisma:merge && pnpm run prisma:generate",
    "prisma:update": "pnpm run prisma:merge && pnpm run prisma:push",
    "prisma:studio": "prisma studio --schema ./prisma/schema.prisma",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "replace:workspace": "funblog replace workspace"
  },
  "dependencies": {
    "@funblog/constants": "workspace:^",
    "@maxmind/geoip2-node": "^5.0.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/mapped-types": "^2.0.4",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/serve-static": "4.0.0",
    "@prisma/client": "5.6.0",
    "@types/nodemailer": "^6.4.14",
    "axios": "^1.6.8",
    "bcrypt": "^5.1.1",
    "body-parser": "1.20.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cookie-parser": "^1.4.6",
    "core-js": "3",
    "cos-nodejs-sdk-v5": "^2.13.4",
    "dayjs": "^1.11.10",
    "file-type": "^16.5.4",
    "ip2region": "^2.3.0",
    "mongoose": "5.12.2",
    "multer": "1.4.5-lts.1",
    "nanoid": "^3.3.6",
    "nest-winston": "^1.9.4",
    "node-ip2region": "^1.0.2",
    "nodemailer": "^6.9.10",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pm2": "^5.3.1",
    "prisma-import": "^1.0.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "sharp": "^0.33.2",
    "ua-parser-js": "^1.0.37",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@funblog/cli": "workspace:*",
    "@funblog/eslint-config": "workspace:*",
    "@funblog/tsconfig": "workspace:*",
    "@funblog/types": "workspace:*",
    "@funblog/utils": "workspace:*",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/cookie-parser": "^1.4.7",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/react": "^18.2.61",
    "@types/react-dom": "^18.2.19",
    "@types/supertest": "^2.0.12",
    "autoprefixer": "^10.4.18",
    "cross-env": "^7.0.3",
    "jest": "^29.5.0",
    "postcss": "^8",
    "postcss-import": "^15.1.0",
    "postcss-mixins": "^9.0.4",
    "prisma": "^5.6.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
